<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/docs/api/org/apache/log4j/xml/log4j.dtd log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="youmovies" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n" />
		</layout>
	</appender>

	<category name="org">
		<priority value="WARN" />
		<appender-ref ref="youmovies" />
	</category>

	<category name="org.springframework.orm.hibernate3.support">
		<priority value="DEBUG" />
		<appender-ref ref="youmovies" />
	</category>

	<category name="br.com.youmovies">
		<priority value="DEBUG" />
		<appender-ref ref="youmovies" />
	</category>

</log4j:configuration>
